@model RamenOkiDoki.Models.FoodItem
@{
    ViewData["Title"] = "ModalPopup";

    string id = "", dishName = "", koreanName = "", description = "", price = "", categoryName = "";

    if (Model != null)
    {
        id = Model.id;
        dishName = Model.dishName;
        koreanName = Model.koreanName;
        description = Model.description;
        price = Model.price;
        categoryName = Model.categoryName;
    }
}

@using (Html.BeginForm("PutMenuItem", "Admin", FormMethod.Post))
{

    @*<form method="Post" class="menuAddForm" asp-action="PutMenuItem" asp-controller="Admin">*@

    <div class="menuAddForm">
        <div class="form-group">
            <label>Food Category</label>
            <input type="text" id="FoodCategory" value="@(categoryName)">
        </div>
        <div class="form-group">
            <label>Dish Name</label>
            <input type="text" id="DishName" value="@(dishName)">
        </div>
        <div class="form-group">
            <label>Korean Name</label>
            <input type="text" id="KoreanName" value="@(koreanName)">
        </div>
        <div class="form-group">
            <label>Price</label>
            <input type="text" id="Price" value="@(price)">
        </div>
        <div class="form-group">
            <label>Description</label>
            <input type="text" id="Description" maxlength="100" value="@(description)">
        </div>
        <input type="hidden" value="@(id)"/>
        <div>
            <button value="AddFoodItem" type="submit" id="addfooditem">Add Item</button>
            <button value="Close" asp-action="FoodMenuEdit" asp-controller="Admin">Cancel</button>
        </div>
        @*</form>*@
    </div>
}