@model Data.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Admin";
}
<div class="combo-page">



    @if (!Globals.UserSignedIn || Globals.UserRole != Globals.UserRoles.Admin)//!User.IsInRole("Admin"))
    {
        <div class="non-sidebar-page">
            <div class="admin-div">
                <h1>Admin Only</h1>
                <br />
                <p style="margin: 50px 0px 50px; font-weight: bold">User is not Signed In as Admin</p>
                <form method="Post">
                    <div class="form-group">
                        <label>User Name</label>
                        <input type="text" id="UserName" />
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" id="Password" />
                    </div>

                    <button value="AddFoodItem" type="submit" onclick="location.href='@Url.Action("AdminSignin", "Admin")'" id="addfooditem">Sign In</button>

                </form>
            </div>
        </div>
    }
    else
    {
<div class="combo-page">
    <div>
        @await Html.PartialAsync("_AdminMenuPartial")
    </div>
    <div class="right-side-content">
        <h2 style="text-align: center; margin-top: 20px">Admin Dashboard</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <button value="DashBoard" type="submit" onclick="location.href='@Url.Action("DashBoard")'" id="addfooditem">Save</button>
            </form>
</div>
</div>
    }

</div>