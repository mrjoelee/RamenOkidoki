@using Data.Models.FoodMenus
@model Data.ViewModels.FoodItemsViewModel
@{
    ViewData["Title"] = "Edit Menu";
}


@if (Model.FoodItems == null)
{
    return;
}



@if (!Globals.UserSignedIn || Globals.UserRole != Globals.UserRoles.Admin) //!User.IsInRole("Admin"))
{
    Layout = "~/Views/Shared/_Layout.cshtml";
    <h1>Admin Only</h1>
}
else
{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    //  @await Html.PartialAsync("_AdminMenuPartial")

    <div class="right-side-content" style="overflow-y: auto; margin-top: 0">
        <div class="menu-table-div">


            <table class="menu-edit-table">
                <form>
                    <button id="btnClick" class="add-item-button" type="submit" asp-action="FoodMenuAddEdit" asp-controller="Admin"> <i class="fas fa-plus-circle"></i> Add Menu Items</button>
                </form>
                <thead>
                    <tr>
                        <th>Dish</th>
                        <th>Korean</th>
                        <th>Price</th>
                        <th>Description</th>
                        <th>Category</th>
                    </tr>
                </thead>
                <tbody>

                    @if (Model.FoodCategoriesList == null)
                    {
                        return;
                    }


                    @foreach (var category in Model.FoodCategoriesList)
                    {
                        if (category.FoodItems != null && category.FoodItems.Count > 0)
                        {

                            foreach (var menuItem in category.FoodItems)
                            {
                                <tr>
                                    <td>@menuItem.dishName</td>
                                    <td style="white-space: nowrap;">$ @menuItem.price</td>
                                    <td>@menuItem.description</td>
                                    <td>@menuItem.foodCategory</td>
                                    <td><a asp-action="FoodMenuAddEdit" asp-controller="Admin" asp-route-id="@menuItem.id"><i class="fas fa-edit"></i></a></td>
                                    <td><a asp-action="DeleteMenuItem" asp-controller="Admin" asp-route-id="@menuItem.id"><i class="fas fa-trash"></i></a></td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

        }

