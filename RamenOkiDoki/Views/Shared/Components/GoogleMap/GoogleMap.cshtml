@using System.ComponentModel.Design
@model Data.ViewModels.GoogleMapViewModel
@*creating api for google location*@
<div>
    <h3 style="text-align:center">Our Location</h3>
    <h5 style="margin-top: 100px;text-align:center">Find us on Google Maps at: <a href="@Url.Content(string.Format("{0}", Model.RamenOkidokiGoogleMap))" target="_blank">10603 Bellaire Blvd, Houston, TX</a></h5>
    <div class="row">
        <div id="map">
            <script>
                var map;

                function initMap() {
                    map = new google.maps.Map(document.getElementById('map'),
                        {
                            center: { lat: 29.703260, lng: -95.568077 },
                            zoom: 18
                        });
                }
            </script>
            <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAhoq1dhym0B31wzDexaqOafvso2853iVI&callback=initMap"
                    async defer>
            </script>
        </div>
    </div>
</div>