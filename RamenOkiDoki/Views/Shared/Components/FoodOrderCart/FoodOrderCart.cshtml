@using System.ComponentModel.Design
@using Microsoft.AspNetCore.Routing
@model Data.ViewModels.FoodItemsViewModel

<div>

    @{
        if (Model.OrderedItems == null || Model.OrderedItems.Count < 1)
        {
            <h3 style="text-align: center; color:darkred">No items in your order</h3>
            return;
        }
        <div>

            <div style="display: inline-block; float: left">
                <h3 style="text-align: center;color:darkred;">Your Order</h3>
                <table class="order-item-table">
                    <tr><th>Quantity</th><th></th><th>Item</th><th>Price</th></tr>
                    @foreach (var menuItem in Model.OrderedItems)
                    {
                        <tr style="border-bottom: 1px solid lightgray; padding: 2px;">
                            <td style="font-size:20px" >
                                <a asp-controller="Cart" asp-action="ChangeQuantity">
                                    <i class="fas fa-minus" style="font-size: 11px; margin-right: 5px;">
                                    </i>
                                </a> @menuItem.quantity  <a asp-controller="Cart" asp-action="ChangeQuantity"><i class="fas fa-plus" style="font-size: 11px; margin-left:5px;"></i></a>
                            </td>
                            <td class="order-item">@menuItem.dishName </td>
                            <td class="order-item" style="text-align: right">$ @menuItem.price</td>
                            <td><a asp-area="" asp-controller="Cart" asp-action="DeleteFromCart" asp-route-itemIdToDelete="@menuItem.id"><i class="fas fa-trash" style="font-size: 12px"></i></a></td>
                        </tr>
                    }

                    <tr><td /><td /><td>Sub Total</td><td style="font-weight: bolder">@Model.OrderSubTotalCost</td></tr>
                </table>
            </div>
            <div style="display: inline-block; float: right; margin: 50px;">
                @if (Model.OrderedItems != null && Model.OrderedItems.Count > 0)
                {
                    <a asp-controller="Cart" asp-action="CheckOut" class="btn btn-primary submit-order-button">Submit Order</a>
                }

            </div>
        </div>
    }

</div>

