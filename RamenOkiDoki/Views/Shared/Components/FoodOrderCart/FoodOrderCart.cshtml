@using System.ComponentModel.Design
@model RamenOkiDoki.ViewModels.FoodItemsViewModel

<div>

    @{
        if (Model.OrderedItems == null || Model.OrderedItems.Count < 1)
        {
            <h2 style="text-align: center; color:darkred">No items in your order</h2>
            return;
        }

        <h5 style="text-align: center;color:darkred;">Your Order</h5>
        <table class="order-item-table">
            <tr><th>Quantity</th><th></th><th>Item</th><th>Price</th></tr>
            @foreach (var menuItem in Model.OrderedItems)
            {
                <tr>
                    <td class="order-item" style="text-align: center">@menuItem.quantity </td>
                    <td class="order-item">@menuItem.koreanName </td>
                    <td class="order-item">@menuItem.dishName </td>
                    <td class="order-item" style="text-align:right">$ @menuItem.price</td>
                    <td><a asp-area="" asp-controller="Cart" asp-action="DeleteFromCart"  asp-route-itemIdToDelete ="@menuItem.id"><i class="fas fa-trash" style="font-size:12px"></i></a></td>
                </tr>
            }
            <tr><td /><td /><td /><td><hr style="height: 1px;background-color:black"/></td></tr>
            <tr><td /><td /><td>Sub Total</td><td style="font-weight: bolder">@Model.OrderTotalCost</td></tr>
        </table>

    }

</div>
  
