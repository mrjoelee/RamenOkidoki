@using Microsoft.AspNetCore.Authorization.Infrastructure
@using Data.Models
@using Data.Models.User
<html lang="en">
<head>
    <meta charset="utf-8" />
    @*<meta name="viewport" content="width=device-width, initial-scale=1.0" />*@
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - RamenOkiDoki</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/layoutpage.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/japanese-font-icon.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.7/css/all.css">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Merienda:wght@700&display=swap" rel="stylesheet">
    <base href="~/"/>

</head>
<body>
    <header class="header sticky-top">

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <image src="/Images/RamenOkidokiNoText.png" Height="50" style="margin: 2px 20px" />
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Ramen Okidoki</a>>
            <div class="container">


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav   mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="dropdown nav-item">
                            <a class="dropdown-toggle nav-link" href="#" role="button" id="navbarDropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                Menus
                            </a>

                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <li><a class="dropdown-item nav-link" asp-area="" asp-controller="Menu" asp-action="DineInMenu">Dine-In Menu</a></li>
                                <li><a class="dropdown-item nav-link" asp-area="" asp-controller="Menu" asp-action="TakeOutMenu">Take Out Menu</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                     
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Counter">Blazor Counter</a>
                        </li>

                        @if (!Globals.UserSignedIn)
                        {
                            <li class="dropdown nav-item">
                                <a class="dropdown-toggle nav-link" href="#" role="button" id="navbarDropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                    My Account
                                </a>

                                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <li><a class="dropdown-item nav-link" asp-area="" asp-controller="MyAccount" asp-action="SignIn">Sign In</a></li> 
                                    <li><a class="dropdown-item nav-link" asp-area="" asp-controller="MyAccount" asp-action="Register">Create Account</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                            <li><a class="dropdown-item nav-link" asp-area="" asp-controller="MyAccount" asp-action="LogUserOut">Sign Out</a></li>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                            </li>
                        }

                    </ul>
                </div>
                @if (Globals.UserSignedIn)
                {
                    <h2 style="color: red; text-align: left; margin-right: 20px; font-weight: bold">@AppUser.UserRole LOGGED IN</h2>
                }
            </div>



            @if (!Globals.UserSignedIn)
            {
                <a class="nav-link" href="tel: 2815758077" style="font-size: 9px; white-space: nowrap; text-align: center"><i class="fas fa-phone"></i> Call (281) 575-8077</a>
                <div class="icon-wrapper">
                    <a class="nav-link" asp-controller="Cart" asp-action="Index" style="font-size: 9px; white-space: nowrap; text-align: center">
                        <i aria-hidden="true" data-icon="&#xe900;" class="japanese"></i></a>

                    <a class="nav-link" asp-controller="Cart" asp-action="Index" style="font-size: 9px; white-space: nowrap; text-align: center"> <span class="badge">@Globals.OrderTotalItems.ToString()</span></a>

                </div>

                @*<i style="text-align: center" class="fas fa-utensils" title="Cart"></i>*@
            }
        </nav>
        @*<div class="page-titles">@ViewData["Title"]</div>*@
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    </div>

    <footer class="footer container-fluid fixed-bottom">
        <div class="row">
            <div class="text-center  col-lg">
                <p>&copy; 2021 - Ramen OkiDoki 10603 Bellaire Blvd, Houston, TX 77072</p>
            </div>
            <div class="text-center col-lg">
                <a href="tel: 2815758077" style="margin-right: 50px"><i class="fas fa-phone"></i> Call (281)575-8077</a> <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="_framework/blazor.server.js"></script>
@*    <script>
        Blazor.start({
          configureSignalR: function (builder) {
            builder.withUrl('/_blazor');
          }
        });
    </script>*@

    <!-- JavaScript Bundle with Popper -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-kQtW33rZJAHjgefvhyyzcGF3C5TFyBQBA13V1RKPf4uH+bwyzQxZ6CmMZHmNBEfJ" crossorigin="anonymous"></script>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
