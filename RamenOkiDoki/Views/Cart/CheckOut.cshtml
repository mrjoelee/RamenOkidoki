@model Data.ViewModels.FoodMenuViewModel
@{
    ViewData["Title"] = "CheckOut";
}

<h1 class="page-titles">CheckOut</h1>

<div class="col d-flex justify-content-center">
    @using (Html.BeginForm("PayForOrder", "Cart", FormMethod.Post))
{
<div>
    <table class="order-item-table">
        <tr><th>Quantity</th><th>Item</th><th>Price</th></tr>
        @foreach (var orderItem in Model.CurrentTakeoutOrder.FoodOrderItemList)
        {
            <tr style="border-bottom: 1px solid lightgray;padding:2px">
                <td style="font-size:12px">
                    <a asp-controller="Cart" asp-action="DecreaseQuantity" asp-route-itemId="@orderItem.OrderItemId">
                        @*<i class="fas fa-plus" style="font-size: 11px; margin-right: 5px; text-decoration: none">
                            </i>*@
                    </a> @orderItem.quantity  <a asp-controller="Cart" asp-action="IncreaseQuantity" asp-route-itemId="@orderItem.OrderItemId"><i class="fas fa-plus" style="font-size: 11px; margin-left:5px;"></i></a>
                </td>
                <td class="order-item">@orderItem.dishName </td>
                <td class="order-item" style="text-align:right">$ @orderItem.price</td>
                <td><a asp-area="" asp-controller="Cart" asp-action="DeleteFromCart" asp-route-itemIdToDelete="@orderItem.OrderItemId"><i class="fas fa-trash" style="font-size:11px"></i></a></td>
            </tr>
        }

        <tr><td /><td style="text-align:right">Sub Total</td><td style="font-weight: bolder;text-align:right">@Model.CurrentTakeoutOrder.OrderSubTotalCost.ToString("C")</td></tr>
        <tr><td /><td style="text-align:right">Sales Tax</td><td style="font-weight: bolder;text-align:right">@Model.CurrentTakeoutOrder.TotalSalesTax.ToString("C")</td></tr>
        <tr><br /></tr>
        <tr><td /><td style="font-weight: bolder; font-size: 2em;margin-top:20px">Order Total</td><td style="font-weight: bolder;font-size:2em">@Model.CurrentTakeoutOrder.OrderTotalCost.ToString("C")</td></tr>
  




    <h4 style="text-align:center;margin:30px 0;">Please enter your last name so we can give you the correct order</h4> 
    
  
        <tr>
        <td>@Html.TextBoxFor(m => m.CurrentTakeoutOrder.NonRegisteredCustomerLastName)</td><td> <button type="submit" class="btn btn-primary submit-order-button">Pay For Your Order</button></td>
       </tr> 
       </table>
</div>
}
