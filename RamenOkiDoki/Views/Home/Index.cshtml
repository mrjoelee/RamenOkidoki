    <div id="map"></div>
    <script>
        var map;
        function initMap() {
            map = new google.maps.Map(document.getElementById('map'), {
                center: { lat: 29.703260, lng: -95.568077 },
                zoom: 18
            });
        }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAhoq1dhym0B31wzDexaqOafvso2853iVI&callback=initMap" 
            async defer>
    </script>

